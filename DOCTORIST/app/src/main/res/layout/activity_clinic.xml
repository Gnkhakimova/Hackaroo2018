<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClinicActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fbf1f9"
        android:orientation="vertical">
        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif"

            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView"
            android:textColor="#767170"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <ListView
            android:id="@+id/doctorList"
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:layout_margin="5dp"
            android:scrollbars="vertical" />


        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textColor="#767170"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/waitTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textColor="#767170"
            android:textSize="20sp"
             />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f2c6ba"
            android:onClick="GoBack"
            android:text="Back" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>